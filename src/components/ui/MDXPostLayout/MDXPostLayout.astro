---
import Layout from '@/layouts/Layout.astro';

interface Props {
    title?: string;
    description?: string;
    type?: 'post' | 'app';
    meta?: {
        title?: string;
        description?: string;
        type?: 'post' | 'app';
    };
    frontmatter?: {
        title?: string;
        description?: string;
        type?: 'post' | 'app';
    };
}

const props = Astro.props;
const meta = props.frontmatter || props.meta || props;
const { title = 'ETC', description = 'ETC', type = 'post' } = meta;

const isPost = type === 'post';
---

<Layout title={title} description={description}>
    {isPost && <h1>{title}</h1>}
    <slot />
</Layout>
