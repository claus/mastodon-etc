---
import styles from './GridOverlay.module.css';
---

{
    import.meta.env.DEV && (
        <grid-overlay>
            <div class:list={[styles.gridOverlay, 'grid']}>
                {Array.from({ length: 12 }).map((_, i) => {
                    return <div class:list={[styles.col, styles[`col${i + 1}`]]} />;
                })}
            </div>
        </grid-overlay>
    )
}

<script>
    import GridOverlay from './GridOverlay';

    if (!customElements.get('grid-overlay')) {
        customElements.define('grid-overlay', GridOverlay);
    }
</script>
