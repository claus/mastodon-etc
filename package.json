    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "shelljs": "^0.10.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-css-modules": "^1.2.2"
  }
