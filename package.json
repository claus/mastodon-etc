    "@typescript-eslint/parser": "^8.49.0",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "figlet": "^1.9.4",
