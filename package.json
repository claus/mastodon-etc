    "@astrojs/mdx": "^4.3.13",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/vercel": "^9.0.2",
    "@madeinhaus/utils": "^2.2.0",
    "astro": "^5.16.5",
    "semver": "^7.7.3",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@madeinhaus/prettier-config": "^1.2.1",
    "@testing-library/dom": "^10.4.1",
